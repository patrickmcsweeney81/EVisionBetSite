# Copy to .env and fill your secrets; avoid committing real tokens/keys

# Odds API (TheOddsAPI-style)
ODDS_API_KEY=
ODDS_API_BASE=https://api.the-odds-api.com/v4

# Regions & markets
REGIONS=au,us
MARKETS=h2h,spreads,totals
# Use "upcoming" or a comma list like "soccer_epl,americanfootball_nfl"
SPORTS=upcoming

# Edge thresholds
EV_MIN_EDGE=0.03

# Betfair
BETFAIR_COMMISSION=0.06

# Telegram
TELEGRAM_ENABLED=0
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_DEBUG=0

# Optional controls
BANKROLL=1000
KELLY_FRACTION=0.25
STAKE_FALLBACK=10
SUMMARY_ENABLED=0
EV_MAX_ALERTS=0
FILTER_BOOKS=
FILTER_SPORTS=
TEST_ALLOW_DUPES=0
